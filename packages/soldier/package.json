{
  "name": "@miguelramos/soldier",
  "version": "0.0.1-beta.1",
  "description": "Scheduler tool",
  "keywords": [
    "tasks",
    "scheduler",
    "typescript",
    "rxjs"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:miguelramos/soldier.git"
  },
  "author": "Miguel Ramos <miguel.marques.ramos@gmail.com>",
  "homepage": "https://github.com/miguelramos/soldier",
  "license": "Apache License 2.0",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "watch": "nodemon -e ts -w ./lib -x npm run watch:serve",
    "watch:serve": "node --inspect ./node_modules/.bin/ts-node lib/index.ts",
    "lint": "tslint --project \"./tsconfig.json\"",
    "format": "prettier --write \"lib/**/*.ts\" \"dist/**/*.js\"",
    "test": "npm run lint && jest",
    "build": "tsc",
    "doc": "typedoc"
  },
  "devDependencies": {
    "@types/jest": "^24.0.0",
    "@types/node": "^10.12.24",
    "coveralls": "^3.0.2",
    "jest": "23.6.0",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "ts-jest": "^23.10.5",
    "ts-lint": "^4.5.1",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.3"
  },
  "dependencies": {
    "rxjs": "^6.4.0",
    "typedoc": "^0.14.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
