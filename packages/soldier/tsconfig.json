{
  "compilerOptions": {
    "target": "es2015",
    "rootDir": "lib",
    "outDir": "dist",
    "module": "commonjs",
    "declaration": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "jest"],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "paths": {
      "@soldier/*": ["./lib/*"]
    },
    "downlevelIteration": true
  },
  "include": ["lib/**/*"],
  "exclude": ["node_modules"]
}
