{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to node",
      "type": "node",
      "request": "attach",
      "restart": true,
      "port": 9229
    },
    {
      "name": "Launch console",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "./node_modules/.bin/ts-node",
      "program": "${workspaceFolder}/packages/soldier/lib/index.ts",
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Launch via npm",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/soldier",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["watch:serve"],
      "port": 9229
    }
  ]
}
